
<launch>
  <!-- BEGIN ROBOT 0. index starts from zero to coinside with the array index in the code-->
  <group ns="robot_0">
    <param name="tf_prefix" value="robot_0"/>
    <include file="modified_rosbot_gazebo.launch" >
      <arg name="init_pose" value="-x 0.5 -y 0.5 -z 0" />
      <arg name="robot_name"  value="robot_0" />
    </include>
  </group>
  
  <!-- BEGIN ROBOT 1. index starts from zero to coinside with the array index in the code-->
  <group ns="robot_1">
  <param name="tf_prefix" value="robot_1" />
  <include file="modified_rosbot_gazebo.launch" >
    <arg name="init_pose" value="-x 0 -y 1 -z 0" />
    <arg name="robot_name"  value="robot_1" />
  </include>
</group>
  
  <!-- BEGIN ROBOT 2. index starts from zero to coinside with the array index in the code-->
  <group ns="robot_2">
    <param name="tf_prefix" value="robot_2"/>
    <include file="modified_rosbot_gazebo.launch" >
      <arg name="init_pose" value="-x 0.5 -y 0.0 -z 0" />
      <arg name="robot_name"  value="robot_2" />
    </include>
  </group>

</launch>